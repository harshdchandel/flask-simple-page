!!!5
html(lang='en')
	head
		title= 'Google Keep'
		link(rel='stylesheet', href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
		link(rel='stylesheet', href="{{ url_for('static', filename='css/main.css') }}")
		link(rel='stylesheet', type='text/css', href="//fonts.googleapis.com/css?family=Open+Sans")
	body
		//- nav bar
		nav.navbar.navbar-custom.navbar-fixed-top
			div.container-fluid
				div.navbar-header
					a.navbar-brand(href='#', style='color:white') Google Keep
				ul.nav.navbar-nav.navbar-right
					li
						a(href='#') Share
					li
						a(href='#') Exit

		div.container-fluid#div-content
			div.container-fluid
				div.row(style='height:100px')
				div.row
					div.col-md-2
					div.col-md-6
						p.text-right.text-large-shadow.text-sans-serif.text-alignment-left Save your thoughts, whenever you are
				div.row(style='padding-top:30px')
					div.col-md-2
					div.col-md-10
						div.btn-group(role='group')
							button.btn.btn-default(type='button') Android
							button.btn.btn-default.btn-middle(type='button') iOS
							button.btn.btn-default.btn-middle(type='button') Chrome
							button.btn.btn-default.btn-middle(type='button') Web Version
